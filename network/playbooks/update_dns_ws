- name: update windows servers
  hosts: windows
  gather_facts: no

  tasks:
    - name: Set DNS servers
      win_shell: |
        $iface = Get-NetAdapter | Where-Object { $_.Status -eq "Up" } | Select-Object -First 1
        $index = $iface.InterfaceIndex
        Set-DnsClientServerAddress -InterfaceIndex $index -ServerAddresses ("10.10.10.71", "10.10.10.72")

